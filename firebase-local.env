# ===========================================
# GREX FINANCES - LOCAL DEVELOPMENT
# ===========================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NODE_ENV=development

# ===========================================
# FIREBASE EMULATORS CONFIGURATION
# ===========================================

# Firebase Project Configuration (Development)
NEXT_PUBLIC_FIREBASE_API_KEY=demo-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:demo
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-DEMO

# Firebase Emulators Configuration
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_ENABLED=true

NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_PORT=9199
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_ENABLED=true

NEXT_PUBLIC_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
NEXT_PUBLIC_FIREBASE_FUNCTIONS_EMULATOR_ENABLED=true

# Firebase Auth Emulator
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_PORT=9099
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_ENABLED=true

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Grex Finances (Local)

# Security (Development)
NEXT_PUBLIC_JWT_SECRET=development-jwt-secret
NEXT_PUBLIC_ENCRYPTION_KEY=development-encryption-key

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CRASH_REPORTING=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_ENABLE_REMOTE_CONFIG=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
