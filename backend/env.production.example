# Configurações de Produção
NODE_ENV=production

# Banco de Dados - Produção
DB_HOST=production-db-host.amazonaws.com
DB_PORT=5432
DB_USERNAME=grex_production_user
DB_PASSWORD=secure_production_password_change_this
DB_NAME=grex_finances_production

# JWT
JWT_SECRET=your_super_secure_jwt_secret_change_this_to_random_string_min_32_chars
JWT_EXPIRES_IN=24h

# Frontend
FRONTEND_URL=https://grexfinances.netlify.app
NEXT_PUBLIC_API_URL=https://grex-finances.onrender.com

# Logs
LOG_LEVEL=warn

# Seeds
RUN_SEEDS=false

# Firebase - Configuração para Autenticação APENAS
# IMPORTANTE: Firebase é usado SOMENTE para autenticação de usuários
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-production-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-production-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-production-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-production-app-id

# AWS (Produção)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_S3_BUCKET=grex-finances-production-uploads

# Stripe (Produção)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-live-key
STRIPE_SECRET_KEY=sk_live_your-stripe-live-secret
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-live-webhook-secret

# Email (Produção)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@grex-finances.com
SMTP_PASS=your-mailgun-production-password
SMTP_FROM=noreply@grex-finances.com

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring
SENTRY_DSN=your-sentry-production-dsn
SENTRY_ENVIRONMENT=production

# Redis (Cache)
REDIS_HOST=production-redis.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Security
CORS_ORIGIN=https://grex-finances.com
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600
