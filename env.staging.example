# Configurações de Staging
NODE_ENV=staging

# Banco de Dados - Staging
DB_HOST=staging-db-host.amazonaws.com
DB_PORT=5432
DB_USERNAME=grex_staging_user
DB_PASSWORD=secure_staging_password_change_this
DB_NAME=grex_finances_staging

# JWT
JWT_SECRET=staging-jwt-secret-change-this-to-secure-random-string
JWT_EXPIRES_IN=24h

# Frontend
FRONTEND_URL=https://staging.grex-finances.com
NEXT_PUBLIC_API_URL=https://api-staging.grex-finances.com

# Logs
LOG_LEVEL=info

# Seeds
RUN_SEEDS=false

# Firebase (Staging)
FIREBASE_PROJECT_ID=grex-finances-staging
FIREBASE_API_KEY=your-staging-firebase-api-key
FIREBASE_AUTH_DOMAIN=grex-finances-staging.firebaseapp.com

# AWS (Staging)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret-key
AWS_S3_BUCKET=grex-finances-staging-uploads

# Stripe (Teste)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-test-webhook-secret

# Email (Staging)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@staging.grex-finances.com
SMTP_PASS=your-mailgun-password
SMTP_FROM=noreply@staging.grex-finances.com

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Monitoring
SENTRY_DSN=your-sentry-staging-dsn
SENTRY_ENVIRONMENT=staging

# Redis (Cache)
REDIS_HOST=staging-redis.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
